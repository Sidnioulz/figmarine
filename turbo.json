{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "api:regen": {
      "cache": false
    },
    "build": {
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "dependsOn": ["^build"],
      "outputs": ["build/**", "dist/**"]
    },
    "clean": {
      "cache": false
    },
    "dev": {
      "dependsOn": ["^build"],
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^build"]
    },
    "lint:fix": {
      "dependsOn": ["^build"]
    },
    "test": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "test:dev": {
      "outputs": ["coverage/**"],
      "dependsOn": []
    },
    "typecheck": {
      "dependsOn": ["^build"]
    }
  }
}
